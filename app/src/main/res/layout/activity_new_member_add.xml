<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".newMemberAddActivity">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="10dp"
       android:layout_marginTop="20dp"
       >
       <EditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:hint="Enter your code "
           android:textColorHint="#958181"
           android:textColor="#000000"
           android:textSize="15sp"
           android:padding="10dp"

           android:textAlignment="center"
           android:background="@drawable/boarders"
           android:id="@+id/codeEditText"
           android:layout_alignParentTop="true"

           android:layout_alignParentLeft="true"
           android:layout_toLeftOf="@+id/submitCodeButton"
           android:gravity="center_horizontal" />


       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Submit"
           android:layout_marginStart="10dp"
           android:layout_marginBottom="10dp"
           android:textSize="15sp"
           android:id="@+id/submitCodeButton"
           android:layout_alignParentTop="true"
           android:layout_alignParentRight="true"


           />
   </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the name of the member "
        android:textColorHint="#958181"
        android:textColor="#000000"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/boarders"
        android:id="@+id/memberNameEditText"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:gravity="center_horizontal" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the email of the member "
        android:textColorHint="#958181"
        android:textColor="#000000"
        android:textSize="15sp"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:background="@drawable/boarders"
        android:id="@+id/memberEmailEditText"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/AddMemberButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:text="Add"
        android:visibility="gone"
        />



    <ListView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:padding="10dp"
        android:background="@drawable/boarders"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
           android:id="@+id/memberNameListView"
        android:visibility="gone"
           />










</LinearLayout>