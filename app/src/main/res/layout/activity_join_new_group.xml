<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".joinNewGroup">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:textColorHint="#000000"
        android:hint="Enter the Email id of the owner"
        android:textSize="20sp"
        android:textAlignment="gravity"

        android:textColor="#000000"
        android:id="@+id/OwnerEmailEditText"
        />
    <EditText
        android:id="@+id/OwnerPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="10dp"
        android:textColorHint="#000000"

        android:hint="Enter the password"
        android:textSize="20sp"
        android:textAlignment="gravity"

        android:textColor="#000000"
        android:inputType="textPassword"
        android:ems="10"
        />

    <ProgressBar
        android:id="@+id/progressBarJoinGroup"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/cus_button"
        android:text="Submit"
        android:textColor="#ffffff" />




</LinearLayout>

